@model QLCafe.WEB.Models.TableCoffees.TableCoffeesEdit

@{
    ViewData["Title"] = "Edit";
}

    <h1>TableCoffeesEdit</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="TableCoffees" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success alert-dismissible">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    <strong>@TempData["Message"]</strong>
                </div>
            }
            <div class="form-group">
             
                <input hidden asp-for="ID" class="form-control" />
               
            </div>
            <div class="form-group">
                <label asp-for="AreaID" class="control-label"></label>
                <input asp-for="AreaID" class="form-control" />
                <span asp-validation-for="AreaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input hidden asp-for="Status" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
